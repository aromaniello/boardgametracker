<div class="container" style="padding-top:50px;">
  <div class="row">
    <div class="col-md-8">
      <h3><%= @boardgame.name %> (<%= @boardgame.year_published %>)</h3>
    </div>
    <div class="col-md-4 text-right">
      <%= link_to "Edit", edit_boardgame_path(@boardgame), class: "btn btn-secondary", style: "width:100px;" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <img src="<%= @boardgame.image_url %>" style="width:250px; height:auto;">
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <strong>Players:</strong> <%= @boardgame.min_players %>-<%= @boardgame.max_players %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <strong>Playing Time:</strong> <%= @boardgame.min_playing_time %>-<%= @boardgame.max_playing_time %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <strong>Age:</strong> <%= @boardgame.min_age %>+
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <strong>Description</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= @boardgame.description %>
    </div>
  </div>
  <div class="row" style="margin-top:10px;">
    <div class="col-md-12">
      <%= link_to "< Back", boardgames_path %>
    </div>
  </div>
</div>
